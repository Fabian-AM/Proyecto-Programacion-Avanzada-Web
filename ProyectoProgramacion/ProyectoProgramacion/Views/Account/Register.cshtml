@{
    Layout = null; // Sin layout, como pediste
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Registrar Usuario</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

    <style>
        /* Estilo personalizado para centrar todo verticalmente */
        body {
            background-color: #f8f9fa; /* Gris muy suave de fondo */
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .card-registro {
            width: 100%;
            max-width: 450px; /* Ancho máximo de la tarjeta */
            box-shadow: 0 4px 8px rgba(0,0,0,0.1); /* Sombra suave */
            border: none;
        }

        .btn-volver {
            text-decoration: none;
            color: #6c757d;
        }

            .btn-volver:hover {
                color: #343a40;
                text-decoration: underline;
            }
    </style>
</head>
<body>

    <div class="card card-registro">
        <div class="card-body p-5">
            <h2 class="text-center mb-4">Crear Cuenta</h2>

            <form asp-action="Register" method="post">

                <div class="mb-3">
                    <label class="form-label">Identificación</label>
                    <input name="Identificacion" class="form-control" placeholder="Ej: 12345" required />
                </div>

                <div class="mb-3">
                    <label class="form-label">Correo Electrónico</label>
                    <input name="Email" type="email" class="form-control" placeholder="nombre@ejemplo.com" required />
                </div>

                <div class="mb-3">
                    <label class="form-label">Contraseña</label>
                    <input name="Password" type="password" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label class="form-label">Confirmar Contraseña</label>
                    <input name="ConfirmPassword" type="password" class="form-control" required />
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary btn-lg">Registrarse</button>
                </div>

            </form>

            <hr class="my-4">

            <div class="text-center">
                <p class="mb-2">¿Ya tienes una cuenta?</p>

                <a asp-controller="Account" asp-action="Login" class="btn btn-outline-secondary w-100">
                    ← Volver a Iniciar Sesión
                </a>

            </div>

        </div>
    </div>

</body>
</html>