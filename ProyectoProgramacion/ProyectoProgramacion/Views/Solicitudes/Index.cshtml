@model List<ProyectoProgramacionBLL.Dtos.SolicitudDto>

@{
    ViewData["Title"] = "Gestión de Solicitudes";
}

<style>

    h2 {
        font-weight: 800;
        font-size: 2rem;
        color: #0D1B2A;
        margin-bottom: 20px;
        display: flex;
        align-items: center;
        gap: 10px;
    }

        h2 i {
            color: #1D7ECF;
            font-size: 1.4rem;
        }

    a.btn-primary[href*="Create"] {
        background: linear-gradient(135deg, #1D7ECF, #5A6BFF) !important;
        border: none !important;
        border-radius: 12px !important;
        padding: 0.75rem 1.6rem !important;
        font-weight: 600 !important;
        font-size: 1rem !important;
        color: #fff !important;
        box-shadow: 0px 8px 18px rgba(0,0,0,0.15) !important;
        transition: 0.25s ease !important;
    }

        a.btn-primary[href*="Create"]:hover {
            transform: translateY(-2px);
            box-shadow: 0px 12px 26px rgba(0,0,0,0.22) !important;
        }

    .table {
        border-radius: 12px !important;
        overflow: hidden;
        background: white;
    }

        .table thead.table-dark {
            background: #0D1B2A !important;
        }

        .table thead th {
            font-weight: 700;
            text-transform: uppercase;
        }

     
        .table tbody tr {
            transition: 0.2s ease-in-out;
        }

            .table tbody tr:hover {
                background: #E8F1FF !important;
            }

    .badge.bg-success {
        background: #16A34A !important;
        font-weight: 600;
    }

    .badge.bg-danger {
        background: #DC2626 !important;
        font-weight: 600;
    }

    .badge.bg-warning {
        background: #FACC15 !important;
        color: #000 !important;
        font-weight: 600;
    }

    .badge.bg-secondary {
        background: #6B7280 !important;
        font-weight: 600;
    }


    .btn-info {
        background: #2563EB !important;
        border: none !important;
        color: white !important;
        border-radius: 10px !important;
        font-weight: 600 !important;
        padding: 6px 12px !important;
        transition: 0.25s ease-in-out;
    }

        .btn-info:hover {
            background: #1D4ED8 !important;
            transform: translateY(-2px);
        }

    .btn-secondary {
        background: #4B5563 !important;
        border: none !important;
        border-radius: 10px !important;
        font-weight: 600 !important;
        padding: 6px 12px !important;
        transition: 0.25s ease-in-out;
    }

        .btn-secondary:hover {
            background: #374151 !important;
            transform: translateY(-2px);
        }

 
    .modal-header.bg-dark {
        background: #0D1B2A !important;
    }

    .modal-content {
        border-radius: 12px !important;
    }

    .spinner-border {
        width: 3rem !important;
        height: 3rem !important;
    }

</style>


<div class="container-fluid">
    <h2><i class="fa fa-clipboard-list"></i> Bandeja de Solicitudes</h2>

    @if (User.IsInRole("Admin") || User.IsInRole("Servicio al Cliente"))
    {
        <div class="text-end mb-3">
            <a asp-action="Create" class="btn btn-primary">
                <i class="fa fa-plus"></i> Nueva Solicitud
            </a>
        </div>
    }

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }
    @if (!User.IsInRole("Servicio al Cliente"))
                        {
    <div class="table-responsive">
        <table class="table table-hover table-bordered shadow-sm">
            <thead class="table-dark">
                <tr>
                    <th># Gestión</th>
                    <th>Cliente</th>
                    <th>Monto</th>
                    <th>Estado</th>
                    <th>Fecha</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.SolicitudID</td>
                        <td>@item.NombreCliente</td>
                        <td>@item.MontoCredito.ToString("C")</td>
                        <td>
                            @{
                                var badgeClass = item.Estado switch
                                {
                                    "Aprobado" => "bg-success",
                                    "Devolución" => "bg-danger",
                                    "Enviado Aprobación" => "bg-warning text-dark",
                                    _ => "bg-secondary"
                                };
                            }
                            <span class="badge @badgeClass">@item.Estado</span>
                        </td>
                        <td>@item.FechaCreacion.ToShortDateString()</td>
                        <td>
                            <button onclick="cargarModal(@item.SolicitudID)" class="btn btn-sm btn-info text-white" title="Procesar / Ver Detalle">
                                <i class="fa fa-edit"></i> Procesar
                            </button>

                            <button onclick="verHistorial(@item.SolicitudID)" class="btn btn-sm btn-secondary" title="Ver Historial">
                                <i class="fa fa-history"></i>
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    }
</div>

<div class="modal fade" id="modalGeneral" tabindex="-1" aria-labelledby="modalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-dark text-white">
                <h5 class="modal-title" id="modalLabel">Gestión de Solicitud</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="contenidoModal">
                <div class="text-center p-4">
                    <output class="spinner-border text-primary">
                        <span class="visually-hidden">Cargando...</span>
                    </output>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function cargarModal(id) {
            var url = '@Url.Action("Edit", "Solicitudes")/' + id;

            var myModal = new bootstrap.Modal(document.getElementById('modalGeneral'));
            myModal.show();

            $('#contenidoModal').load(url, function(response, status, xhr) {
                if (status == "error") {
                    $('#contenidoModal').html('<div class="alert alert-danger">Error al cargar la solicitud: ' + xhr.statusText + '</div>');
                }
            });
        }

        function verHistorial(id) {
            var url = '@Url.Action("Historial", "Solicitudes")/' + id;
            var myModal = new bootstrap.Modal(document.getElementById('modalGeneral'));
            myModal.show();
            $('#contenidoModal').load(url);
        }
    </script>
}

