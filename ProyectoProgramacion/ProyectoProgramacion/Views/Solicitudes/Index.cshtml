@model IEnumerable<ProyectoProgramacionBLL.Dtos.SolicitudDto>

@{
    ViewData["Title"] = "Gestión de Solicitudes";
}

<h1>Listado de Solicitudes de Crédito</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fa fa-plus"></i> Nueva Solicitud
    </a>
</p>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">
        @ViewBag.Error
    </div>
}

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Cliente</th>
            <th>Monto</th>
            <th>Fecha</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.SolicitudID</td>
                <td>@item.NombreCliente</td>
                <td>@item.MontoCredito.ToString("C")</td>
                <td>@item.FechaCreacion.ToShortDateString()</td>
                <td>
                    @* Lógica de colores (Badges) *@
                    @if (item.Estado == "Ingresado")
                    {
                        <span class="badge bg-primary">@item.Estado</span>
                    }
                    else if (item.Estado == "Aprobado")
                    {
                        <span class="badge bg-success">@item.Estado</span>
                    }
                    else if (item.Estado == "Devolución")
                    {
                        <span class="badge bg-warning text-dark">@item.Estado</span>
                    }
                    else if (item.Estado == "Enviado Aprobación")
                    {
                        <span class="badge bg-info text-dark">@item.Estado</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">@item.Estado</span>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.SolicitudID" class="btn btn-warning btn-sm" title="Procesar solicitud">
                        <i class="fa fa-pencil"></i> Editar
                    </a>

                    <button type="button" class="btn btn-info btn-sm" onclick="verHistorial(@item.SolicitudID)" title="Ver movimientos">
                        <i class="fa fa-history"></i> Historial
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="modal fade" id="modalHistorial" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-dark text-white">
                <h5 class="modal-title">Historial de Movimientos</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="contenedorHistorial">
                <div class="text-center py-3">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Cargando...</span>
                    </div>
                    <p class="mt-2 text-muted">Cargando historial...</p>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function verHistorial(idSolicitud) {
            // 1. Instanciar y mostrar el modal
            var modalElement = document.getElementById('modalHistorial');
            var myModal = new bootstrap.Modal(modalElement);
            myModal.show();

            // 2. Limpiar contenido previo y mostrar spinner
            $("#contenedorHistorial").html(`
                <div class="text-center py-3">
                    <div class="spinner-border text-primary" role="status"></div>
                    <p class="mt-2 text-muted">Cargando historial...</p>
                </div>
            `);

            // 3. Hacer la petición AJAX al controlador
            var url = '@Url.Action("Historial", "Solicitudes")/' + idSolicitud;

            $("#contenedorHistorial").load(url, function(response, status, xhr) {
                if (status == "error") {
                    $("#contenedorHistorial").html(
                        `<div class="alert alert-danger">
                            Error al cargar el historial: ${xhr.status} ${xhr.statusText}
                         </div>`
                    );
                }
            });
        }
    </script>

    @if (TempData["MensajeExito"] != null)
    {
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <script>
            document.addEventListener("DOMContentLoaded", function() {
                Swal.fire({
                    title: '¡Éxito!',
                    text: '@TempData["MensajeExito"]',
                    icon: 'success',
                    confirmButtonText: 'Aceptar'
                });
            });
        </script>
    }
}