@model ProyectoProgramacionBLL.Dtos.SolicitudDto

@{
    ViewData["Title"] = "Crear Solicitud";
}

<h1>Nueva Solicitud de Crédito</h1>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label class="control-label">Cliente Solicitante</label>
                <select asp-for="ClienteID" class="form-control" asp-items="ViewBag.ClienteID">
                    <option value="">-- Seleccione un Cliente --</option>
                </select>
                <span asp-validation-for="ClienteID" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="MontoCredito" class="control-label">Monto Solicitado</label>
                <input asp-for="MontoCredito" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="MontoCredito" class="text-danger"></span>
                <small class="form-text text-muted">El monto no puede exceder los 10.000.000 colones.</small>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ComentariosIniciales" class="control-label">Comentarios / Observaciones</label>
                <textarea asp-for="ComentariosIniciales" class="form-control" rows="3"></textarea>
                <span asp-validation-for="ComentariosIniciales" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Adjuntar Documento</label>
                <input asp-for="DocumentoAdjunto" type="file" class="form-control" />
                <span asp-validation-for="DocumentoAdjunto" class="text-danger"></span>
            </div>

            <div class="form-group">
                <form asp-action="Create" method="post">
                    <button type="submit" class="btn btn-primary">Crear Solicitud</button>
                </form>
                <a asp-action="Index" class="btn btn-secondary">Volver al listado</a>
            </div>
            
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}