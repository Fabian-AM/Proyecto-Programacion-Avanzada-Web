@model ProyectoProgramacionBLL.Dtos.SolicitudDto

@{
    ViewData["Title"] = "Nueva Solicitud";
}

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<div class="container mt-4">
    <h2><i class="fa fa-plus-circle"></i> Crear Nueva Solicitud</h2>
    <hr />

    <div class="row">
        <div class="col-md-8">
            <form id="frmCrearSolicitud" asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                @* Selección de Cliente *@
                <div class="form-group mb-3">
                    <label asp-for="ClienteID" class="control-label fw-bold">Cliente</label>
                    <select asp-for="ClienteID" class="form-control" asp-items="ViewBag.ClienteID">
                        <option value="">-- Seleccione un Cliente --</option>
                    </select>
                    <span asp-validation-for="ClienteID" class="text-danger"></span>
                </div>

                @* Monto *@
                <div class="form-group mb-3">
                    <label asp-for="MontoCredito" class="control-label fw-bold">Monto del Crédito</label>
                    <input asp-for="MontoCredito" class="form-control" type="number" step="0.01" />
                    <span asp-validation-for="MontoCredito" class="text-danger"></span>
                </div>

                @* Documentos *@
                <div class="form-group mb-3 p-3 border rounded bg-white">
                    <label class="control-label fw-bold w-100">
                        <i class="fa fa-upload"></i> Documento de Soporte
                        <input asp-for="DocumentoAdjunto" type="file" class="form-control mt-2" />
                    </label>
                </div>

                @* Comentarios *@
                <div class="form-group mb-3">
                    <label class="control-label fw-bold w-100">
                        Comentarios Iniciales
                        <textarea asp-for="ComentariosIniciales" class="form-control mt-2" rows="3"></textarea>
                    </label>
                </div>

                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-success">
                        <i class="fa fa-save"></i> Crear Solicitud
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.getElementById('frmCrearSolicitud').addEventListener('submit', function (e) {
            e.preventDefault(); 

            var form = this;

            if (!$(form).valid()) return;

            var inputMonto = document.getElementById('MontoCredito');
            var monto = parseFloat(inputMonto.value);

            if (monto > 10000000) {
                Swal.fire({
                    icon: 'error',
                    title: 'Monto Excedido',
                    text: 'No se permite ingresar solicitud de crédito por un monto mayor a 10.000.000 colones'
                });
                return; 
            }

            var formData = new FormData(form);

            Swal.fire({
                title: 'Procesando...',
                text: 'Validando solicitud...',
                allowOutsideClick: false,
                didOpen: () => { Swal.showLoading() }
            });

            fetch(form.action, {
                method: 'POST',
                body: formData,
                headers: {
                    'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                }
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    Swal.fire({
                        icon: 'success',
                        title: '¡Creado!',
                        text: data.message,
                        confirmButtonText: 'Ir al Listado'
                    }).then(() => {
                        window.location.href = '@Url.Action("Index")';
                    });
                } else {
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: data.message
                    });
                }
            })
            .catch(error => {
                console.error('Error:', error);
                Swal.fire('Error', 'Error de conexión o problema en el servidor.', 'error');
            });
        });
    </script>
}