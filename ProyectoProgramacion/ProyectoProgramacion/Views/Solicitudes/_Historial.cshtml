@model List<ProyectoProgramacionBLL.Dtos.BitacoraDto>
<style>


.alert-info {
    background: #E8F1FF !important;
    border: 1px solid #BFDBFE !important;
    color: #1E40AF !important;
    font-weight: 600;
    border-radius: 10px;
}


.table {
    background: #FFFFFF;
    border-radius: 10px;
    overflow: hidden;
}

.table thead.table-dark {
    background: #0D1B2A !important;
}

.table thead th {
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.4px;
}

.table tbody tr {
    transition: 0.2s;
}

.table tbody tr:hover {
    background: #F3F6FA !important;
}


.badge.bg-success { background: #16A34A !important; font-weight: 600; }
.badge.bg-danger { background: #DC2626 !important; font-weight: 600; }
.badge.bg-warning { background: #FACC15 !important; color: #111 !important; font-weight: 600; }
.badge.bg-info { background: #38BDF8 !important; color: #0F172A !important; font-weight: 600; }
.badge.bg-secondary { background: #6B7280 !important; font-weight: 600; }


.text-muted.fst-italic {
    font-size: 0.9rem;
}

.fa-user-circle {
    color: #475569 !important;
    font-size: 1.2rem;
}

td small.text-muted {
    font-size: 0.75rem;
    margin-left: 22px;
}

.text-center h5 {
    color: #65758B !important;
    font-weight: 500;
}

.fa-folder-open {
    opacity: 0.7;
}


.btn-secondary {
    background: #4B5563 !important;
    border-radius: 10px !important;
    padding: 10px 18px !important;
    font-weight: 600 !important;
    border: none !important;
    transition: 0.25s ease-in-out;
}

.btn-secondary:hover {
    background: #374151 !important;
    transform: translateY(-2px);
}

</style>


<div class="p-3">
    @if (Model != null && Model.Count > 0)
    {
        <div class="alert alert-info py-2">
            <i class="fa fa-history"></i> Mostrando <strong>@Model.Count</strong> movimientos registrados.
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-hover table-sm border">
                <thead class="table-dark">
                    <tr>
                        <th>Fecha</th>
                        <th>Acción / Estado</th>
                        <th>Comentario</th>
                        <th>Usuario</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-nowrap">@item.Fecha</td>
                            <td>
                                @{
                                    var badgeClass = item.Accion switch {
                                        "Aprobado" => "badge bg-success",
                                        "Devolución" => "badge bg-danger",
                                        "Enviado Aprobación" => "badge bg-warning text-dark",
                                        "Crear" => "badge bg-info text-dark",
                                        _ => "badge bg-secondary"
                                    };
                                }
                                <span class="@badgeClass">@item.Accion</span>
                            </td>
                            <td>
                                @if (string.IsNullOrEmpty(item.Comentario))
                                {
                                    <span class="text-muted fst-italic">Sin comentarios</span>
                                }
                                else
                                {
                                    @item.Comentario
                                }
                            </td>
                            <td>
                                <i class="fa fa-user-circle text-secondary"></i> @item.NombreUsuario
                                @if(!string.IsNullOrEmpty(item.RoleUsuario) && item.RoleUsuario != "N/A")
                                {
                                    <small class="text-muted d-block">(@item.RoleUsuario)</small>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <div class="mb-3">
                <i class="fa fa-folder-open fa-3x text-muted"></i>
            </div>
            <h5 class="text-muted">No hay movimientos registrados para esta solicitud.</h5>
        </div>
    }

    <div class="text-end mt-3">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
    </div>
</div>