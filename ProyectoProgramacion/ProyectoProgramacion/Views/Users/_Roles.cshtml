@model ProyectoProgramacionBLL.Dtos.ViewModels.UserRolesViewModel

<style>

    #MainModal .modal-content {
        border-radius: 14px !important;
        border: none !important;
        box-shadow: 0px 8px 25px rgba(0,0,0,0.25) !important;
        overflow: hidden;
    }

    #MainModal .modal-header {
        background: #0D1B2A !important;
        color: white !important;
        padding: 16px 22px !important;
    }

    #MainModal .modal-title {
        font-weight: 700;
        font-size: 1.2rem;
        letter-spacing: 0.3px;
    }

    #MainModal .btn-close {
        filter: brightness(0) invert(1);
    }


    #MainModal .modal-body {
        padding: 24px !important;
        background: #F9FAFB;
    }

        #MainModal .modal-body h5 {
            font-weight: 700;
            color: #1E293B;
            margin-bottom: 18px;
        }

    #MainModal .form-check {
        padding: 10px 14px;
        background: white;
        border-radius: 10px;
        border: 1px solid #E2E8F0;
        margin-bottom: 10px;
        transition: 0.2s;
    }

        #MainModal .form-check:hover {
            background: #F1F5F9;
        }

    #MainModal .form-check-input {
        width: 18px;
        height: 18px;
        cursor: pointer;
    }

    #MainModal .form-check-label {
        margin-left: 8px;
        font-weight: 600;
        color: #334155;
    }

    #MainModal .modal-footer {
        background: #F1F5F9;
        border-top: 1px solid #E2E8F0;
        padding: 12px 18px;
    }

    
    #MainModal .btn-secondary {
        background: #4B5563 !important;
        border: none !important;
        padding: 10px 18px !important;
        border-radius: 12px !important;
        font-weight: 600 !important;
    }

        #MainModal .btn-secondary:hover {
            background: #374151 !important;
            transform: translateY(-2px);
        }


    #MainModal .btn-success {
        background: #16A34A !important;
        border: none !important;
        padding: 10px 20px !important;
        border-radius: 12px !important;
        font-weight: 700 !important;
    }

        #MainModal .btn-success:hover {
            background: #15803D !important;
            transform: translateY(-2px);
        }

</style>


<div class="modal fade" id="MainModal">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title">Administrar Roles</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <form id="RolesForm">

                <div class="modal-body">
                    <input type="hidden" asp-for="UserId" />

                    <h5>@Model.Email</h5>

                    @foreach (var role in Model.Roles)
                    {
                        <div class="form-check">
                            <input class="form-check-input"
                                   type="checkbox"
                                   name="Roles[@Model.Roles.IndexOf(role)].Selected"
                                   value="true"
                                   @(role.Selected ? "checked" : "") />

                            <input type="hidden"
                                   name="Roles[@Model.Roles.IndexOf(role)].RoleName"
                                   value="@role.RoleName" />

                            <label class="form-check-label">
                                @role.RoleName
                            </label>
                        </div>
                    }
                </div>

                <div class="modal-footer">
                    <button class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-success">Guardar Roles</button>
                </div>

            </form>

        </div>
    </div>
</div>

<script>
    $('#RolesForm').submit(function (e) {
        e.preventDefault();

        $.ajax({
            url: '/Users/Roles',
            method: 'POST',
            data: $(this).serialize(),
            success: function (res) {
                if (res.success) {
                    Swal.fire('Listo', res.message, 'success').then(() => location.reload());
                } else {
                    Swal.fire('Error', res.errors.join(','), 'error');
                }
            }
        });
    });
</script>

