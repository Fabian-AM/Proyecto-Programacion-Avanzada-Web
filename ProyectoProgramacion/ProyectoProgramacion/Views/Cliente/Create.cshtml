@model ProyectoProgramacionBLL.Dtos.ClienteDto

<style>

    .modal-content {
        background: rgba(255,255,255,0.08);
        backdrop-filter: blur(14px);
        -webkit-backdrop-filter: blur(14px);
        border-radius: 18px;
        border: 1px solid rgba(255,255,255,0.18);
        box-shadow: 0 12px 35px rgba(0,0,0,0.5);
        color: #F2F6FF;
    }

    .modal-header {
        border-bottom: 1px solid rgba(255,255,255,0.15);
        background: rgba(255,255,255,0.04);
        border-top-left-radius: 18px;
        border-top-right-radius: 18px;
        color: #F2F6FF;
    }

    .modal-title {
        font-weight: 700;
        font-size: 1.3rem;
        color: #E3EEFF;
    }

    .form-label {
        font-weight: 600;
        color: #DCE9FF;
    }

    .form-control {
        background: rgba(255,255,255,0.12);
        border: 1px solid rgba(255,255,255,0.18);
        border-radius: 12px;
        padding: 0.9rem 1rem;
        color: #F2F6FF;
        transition: .25s;
    }

        .form-control::placeholder {
            color: #DFE8FF;
        }

        .form-control:focus {
            background: rgba(255,255,255,0.18);
            border-color: #1D7ECF;
            box-shadow: 0 0 0 3px rgba(29,126,207,0.35);
            color: #F2F6FF;
        }

    .text-danger {
        font-size: .85rem;
        color: #ffb3b3 !important;
    }

    .modal-footer {
        border-top: 1px solid rgba(255,255,255,0.15);
        background: rgba(255,255,255,0.04);
        border-bottom-left-radius: 18px;
        border-bottom-right-radius: 18px;
        color: #F2F6FF;
    }

</style>


<div class="modal fade" id="modalCrearCliente" tabindex="-1" aria-labelledby="formModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title" id="formModalLabel">Crear Nuevo Registro</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>

            <div class="modal-body">
                <form id="formCrearCliente" asp-action="CrearCliente" method="post">
                    @Html.AntiForgeryToken()

                    <div class="form-group mb-3">
                        <label asp-for="Nombre" class="form-label"></label>
                        <input asp-for="Nombre" class="form-control" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Apellido" class="form-label"></label>
                        <input asp-for="Apellido" class="form-control" />
                        <span asp-validation-for="Apellido" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Identificacion" class="form-label"></label>
                        <input asp-for="Identificacion" class="form-control" type="number" />
                        <span asp-validation-for="Identificacion" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Edad" class="form-label"></label>
                        <input asp-for="Edad" class="form-control" type="number" />
                        <span asp-validation-for="Edad" class="text-danger"></span>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-success" id="btnGuardarCambios">Guardar</button>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    </div>

                </form>
            </div>

        </div>
    </div>
</div>


